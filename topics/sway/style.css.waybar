/* #custom-waybar-mpris */
#taskbar button
#taskbar button.active
#taskbar button.minimized
#taskbar
#taskbar button.fullscreen
#mpd {
    padding: 0 10px;
    margin: 0 4px;
    color: #edeeff;
}

/* WAYBAR-MEDIA */

#custom-waybar-media {
	background-color: #3c3f4c;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #edeeff;
}

#custom-waybar-media.playing {
	background-color: #3c3f4c;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #4b5162;
}

#custom-waybar-media.paused {
	background-color: #81a1c1;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #4b5162;
}

#custom-waybar-media.stopped {
	background-color: #4c566a;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #4b5162;
}

/* TASKBAR */

#taskbar {
    background-color:#556;
	margin: 0;
	padding: 0;
}

#taskbar button {
	padding: 0 10 0 10;
	margin: 0;
}

#taskbar button.active {
    background-color:  #3c3f4c;
}

#taskbar button.minimized {
    background-color: #3c3f4c;
}

#taskbar button:hover {
    background: rgba(0, 0, 0, 0.2);
    box-shadow: inherit;
}

/* BROWSER BOOKMARKS */

#custom-newtab {
	background-color: #3c3f4c;
	font-size: 18px;
	padding: 0 12 0 20;
	margin: 0;
	border-bottom: 2px solid #4b5162;
}
#custom-mail {
	background-color: #3c3f4c;
	font-size: 18px;
	padding: 0 2 0 12;
    margin: 0;
	border-bottom: 2px solid #3c3f4c;
}

/* WIDGETS */

#custom-exit {
	background-color: #3c3f4c;
	padding: 0px 8px 0px 8px;
	border-radius: 5;
	margin: 0;
}

#custom-suspend {
	background-color: #3c3f4c;
	font-size: 20px;
	padding: 0px 10px 0px 10px;
	border-radius: 0 5 5 0;
	margin: 0;
}

#custom-suspend:hover {
	box-shadow: inherit;
	text-shadow: inherit;
}

#custom-name {
    background-color: #434c5e;
	padding: 0px 10px 0px 10px;
    border-radius: 5 0 0 5;
	margin: 0;
	border-bottom: 2px solid #4b5162;
}

#custom-pacman {
	background-color: #3c3f4c;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #4b6789;
}

#clock {
    background-color: #4b5162;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #4b5162
}

#battery {
    background-color: #CDCDCD;
	padding: 0px 8px 0px 8px;
	border-radius: 5px;
	margin: 0;
}

#battery.charging {
    color: #edeeff;
}

@keyframes blink {
    to {
        background-color: #edeeff;
        color: #000000;
    }
}

#battery.critical:not(.charging) {
    background-color: #f53c3c;
    color: #edeeff;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}

label:focus {
    background-color: #000000;
}

#cpu {
    background-color:  #3c3f4c;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #f850ac;
}

#memory {
    background-color:  #3c3f4c;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #00caff;
}

#backlight {
    background-color: #4b5162;
	padding: 0px 8px 0px 8px;
	margin: 0;
}

#network {
    background-color: #3c3f4c;
	padding: 0px 8px 0px 8px;
	margin: 0;	
	border-bottom: 2px solid #76dcdd;
}

#network.disconnected {
    background-color: #f53c3c;
}

#pulseaudio {
    background-color:  #3c3f4c;
	padding: 0px 10px 0px 10px;
	margin: 0;
	border-bottom: 2px solid #3c3f4c;	
}

#custom-weather {
    background-color: #7b9b96;
	padding: 0 8 0 8;
	margin: 0;
	border-bottom: 2px solid #708c86;
}

#pulseaudio.muted {
    background-color: #f850ac;
    color: #2a5c45;
}

#custom-media {
    background-color: #3c3f4c;
	padding: 0px 8px 0px 8px;
	margin: 0;
	
}

#custom-media.custom-spotify {
    background-color: #3c3f4c;
	padding: 0px 8px 0px 8px;
}

#custom-media.custom-vlc {
    background-color: #ffa000;
	padding: 0px 8px 0px 8px;
	border-radius: 5px;    
}


#temperature {
    background-color: #3c3f4c;
	margin: 0;
	
}

#temperature.critical {
    background-color: #eb4d4b;
}

#tray {
    background-color: #4c566a;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid #4b5162;
}

#disk {
    background-color: #AA8A7A;
	padding: 0px 8px 0px 8px;
	margin: 0;
	border-bottom: 2px solid  #886e61;
}

#idle_inhibitor {
    background-color: #3c3f4c;
	padding: 0px 12px 0px 12px;
	border-radius: 5 0 0 5;
	font-size: 20px;
	margin: 0;
	border-bottom: 2px solid #3c3f4c;
}

#idle_inhibitor.activated {
    background-color: #3c3f4c;
    color: #ff9cff;
}

#mpd {
    background-color: #3c3f4c;
	padding: 3px 8px 3px 8px;
	margin: 0;
	
}


#mpd.disconnected {
    background-color: #f53c3c;
}

#mpd.stopped {
    background-color: #90b1b1;
}

#mpd.paused {
    background-color: #51a37a;
}
