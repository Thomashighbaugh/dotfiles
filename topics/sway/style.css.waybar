* {
	margin: -2 0 -2 0;
    border: none;
    border-radius: 5px;
    padding: 5 3 5 3;
    /* `otf-font-awesome` is required to be installed for icons */
    font-family: Font Awesome, Product Sans Medium,Google Sans Medium, San Francisco Text,Roboto, Helvetica, Arial, sans-serif;
    /* font-size: 13px; */
}

window#waybar {
    background-color: #292d35;
    background-color: transparent; 
    color: #edeeff;
    transition-property: background-color;
    transition-duration: 1.5s;
}transition

window#waybar.hidden {
    opacity: 0.2;
}

#workspaces {
    background-color: #292d35;
    border-radius: 5px;
    margin: 0 0 0 10;
/*     padding-left: 5; */
}

#workspaces button {
	font-size: 18px;
	border-radius: 5px;
    margin-right: 8px;
    background-color: #3c3f4c;
    color: #edeeff;
        border-bottom: 3px solid #edeeff;

}

#window {
	padding: 5px;
    background-color: #3c3f4c;
	padding: 0 10 0 12;
    margin: 0;
    border-radius: 0 5 5 0;
	border-bottom: 2px solid #edeeff;
	border-radius: 5px;
}

/* https://github.com/Alexays/Waybar/wiki/FAQ#the-workspace-buttons-have-a-strange-hover-effect */
#workspaces button:hover {
    color: #00caff;
    box-shadow: inherit;
     border-bottom: 3px solid #00caff; 
}

#workspaces button.focused {
   color: #ff9cff;
    border-bottom: 3px solid #ff9cff; 
}

#workspaces button.urgent {
    background-color: #f0ee6e;
}

#mode {
    background-color: #61aeee;
    border-bottom: 3px solid #edeeff;
}

