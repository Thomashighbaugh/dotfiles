{
  //   "layer": "top", // Waybar at top layer
     "position": "top", // Waybar position (top|bottom|left|right)		
      "height": 15, // Waybar height (to be removed for auto height)
    // "width": 1200, // Waybar width
     "margin-top": -3,
    // Choose the order of the modules
    "modules-left": ["sway/workspaces", "custom/github",  ],
    "modules-center": ["sway/window",],
    // "idle_inhibitor",
    "modules-right": ["idle_inhibitor", "pulseaudio", "cpu","memory",  "tray", "custom/suspend", "clock"],
    // Modules configuration
     "sway/workspaces": {
         "disable-scroll": true,
         "all-outputs": true,
         "format": "{icon}",
         "persistent_workspaces": {
         	"1": [],
         	"2": [],
         	"3": [],
            "4": [],
            "5": [],
            "6": [],
      //      "7": [],
      //      "8": [],
      //      "9": [],
      //      "0": [],
         },
             "focused": "ÔÜí",
             "urgent": "ÔÅ™",
             "default": "ÔÑë"
         }
     },
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/window": {
    	"format": {},
    	 "max-length": 15,
    },
		"custom/waybar-media": {
        "return-type": "json",
        "exec": "~/.config/waybar/waybar-media.py status",
        "on-click": "~/.config/waybar/waybar-media.py playpause",
        "on-scroll-up": "~/.config/waybar/waybar-media.py previous",
        "on-scroll-down": "~/.config/waybar/waybar-media.py next",
        "max-length": 12,
        "escape": true
    },
    "custom/waybar-mpris": {
        "return-type": "json",
        "exec": "~/.config/waybar/waybar-mpris --position --autofocus",
        "on-click": "~/.config/waybar/waybar-mpris --send toggle",
        // This option will switch between players on right click.
            "on-click-right": "~/.config/waybar/waybar-mpris --send player-next",
        // The options below will switch the selected player on scroll
            // "on-scroll-up": "~/.config/waybar/waybar-mpris --send player-next",
            // "on-scroll-down": "~/.config/waybar/waybar-mpris --send player-prev",
        // The options below will go to next/previous track on scroll
            // "on-scroll-up": "~/.config/waybar/waybar-mpris --send next",
            // "on-scroll-down": "~/.config/waybar/waybar-mpris --send prev",
        "escape": true,
    },
    "tray": {
         "icon-size": 21,
         "spacing": 10
    },
	 "idle_inhibitor": {
         "format": "{icon}",
         "format-icons": {
             "activated": "Ôúá",
             "deactivated": "Ôúà"
         }
     },
    "clock": {
         "timezone": "America/Los_Angeles",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": true,
    },
    "memory": {
        "format": "{}% ÔÉâ",
                "tooltip": true,

    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
      "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö© {format_source}",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/name": {
      "format": "ÔåÉ ~ {}",
      "exec" : "hostname -s",
      //"return-type": "json",
      "on-click": "rofi -combi-modi window,drun,ssh -theme sidetab -font 'ProductSansMedium 10' -show combi -icon-theme 'Papirus' -show-icons",
      "tooltip": false
    },
    "custom/weather": {
        "exec": "curl 'https://wttr.in/?format=1'",
        "interval": 3600,
    	"max-length": 10
    },
  "disk": {
        "interval": 30,
        "format": "{percentage_free}% left in HDD",
        "path": "/run/media/bryan/6331d39c-2e68-4798-a70e-0aa11b783705/",
      	"tooltip": false
    },
    "wlr/taskbar": {
    	"format": "{icon}",
    	"all-outputs" : false,
    	"active-first" : false,
   	    "icon-size": 14,
   	    "icon-theme": "Numix-Circle",
        "tooltip-format": "{title}",
    	"on-click": "activate",
    	"on-click-middle": "close"
    },
    "custom/suspend": {
    	"format": "Ôóú",
    	"on-click": "nwgbar -o 0.2",
		"escape": true,
    	"tooltip": false 
    },
    "custom/github": {
    	"format": "ÔÇõ",
    	"on-click": "xdg-open https://github.com/snakedye",
    	"tooltip": false 
    },

    "custom/mail": {
       	"format": "Ôõ≠",
        "on-click": "thunderbird",
    	"tooltip": false 
    },
	"custom/newtab": {
    	"format": "Ôüõ",
    	"on-click": "firefox ",
    	"tooltip": true 
    },
    "custom/exit": {
       	"format": "Ô†™",
       	"on-click": "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'", 
    	"tooltip": false 
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 16,
         "icon-theme": "Numix-Circle",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-right": "minimize",
        "on-click-middle": "close"
    }
}
