#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";
  redf="${esc}[31m";
  greenf="${esc}[32m";
  yellowf="${esc}[33m";
  bluef="${esc}[34m";
  purplef="${esc}[35m";
  cyanf="${esc}[36m";
  whitef="${esc}[37m";
  
  blackf_light="${esc}[90m";
  redf_light="${esc}[91m";
  greenf_light="${esc}[92m";
  yellowf_light="${esc}[93m";
  bluef_light="${esc}[94m";
  purplef_light="${esc}[95m";
  cyanf_light="${esc}[96m";
  whitef_light="${esc}[97m";

  reset="${esc}[0m"
}

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.

initializeANSI

cat << EOF

  ${redf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${redf_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${greenf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${greenf_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${yellowf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${yellowf_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${bluef}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${bluef_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${purplef}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${purplef_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${cyanf}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${cyanf_light}â–ˆâ–ˆ${reset} 
  ${redf}â–ˆâ–ˆ${reset}      ${redf_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${greenf}â–ˆâ–ˆ${reset}      ${greenf_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${yellowf}â–ˆâ–ˆ${reset}      ${yellowf_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${bluef}â–ˆâ–ˆ${reset}      ${bluef_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${purplef}â–ˆâ–ˆ${reset}      ${purplef_light}â–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${cyanf}â–ˆâ–ˆ${reset}      ${cyanf_light}â–ˆâ–ˆ${reset}  
  ${redf}â–ˆâ–ˆ${reset}  ${redf_light}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${greenf}â–ˆâ–ˆ${reset}  ${greenf_light}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${yellowf}â–ˆâ–ˆ${reset}  ${yellowf_light}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${bluef}â–ˆâ–ˆ${reset}  ${bluef_light}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${purplef}â–ˆâ–ˆ${reset}  ${purplef_light}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  ${blackf}|${reset}  ${cyanf}â–ˆâ–ˆ${reset}  ${cyanf_light}â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆ${reset}  

EOF