#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";
  redf="${esc}[31m";
  greenf="${esc}[32m";
  yellowf="${esc}[33m";
  bluef="${esc}[34m";
  purplef="${esc}[35m";
  cyanf="${esc}[36m";
  whitef="${esc}[37m";

  blackf_light="${esc}[90m";
  redf_light="${esc}[91m";
  greenf_light="${esc}[92m";
  yellowf_light="${esc}[93m";
  bluef_light="${esc}[94m";
  purplef_light="${esc}[95m";
  cyanf_light="${esc}[96m";
  whitef_light="${esc}[97m";

  reset="${esc}[0m"
}

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.

initializeANSI

cat << EOF

 ${redf}  â–€â–„   â–„â–€  ${reset}   ${greenf} â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„ ${reset}   ${yellowf}  â–„â–ˆâ–ˆâ–„  ${reset}   ${bluef}  â–€â–„   â–„â–€  ${reset}   ${purplef} â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„ ${reset}   ${cyanf}  â–„â–ˆâ–ˆâ–„  ${reset}
 ${redf} â–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–€â–ˆâ–„ ${reset}   ${greenf}â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ${reset}   ${yellowf}â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„${reset}   ${bluef} â–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–€â–ˆâ–„ ${reset}   ${purplef}â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ${reset}   ${cyanf}â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„${reset}
 ${redf}â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ${reset}   ${greenf}â–€â–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–€${reset}   ${yellowf}â–€â–€â–ˆâ–€â–€â–ˆâ–€â–€${reset}   ${bluef}â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ${reset}   ${purplef}â–€â–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–€${reset}   ${cyanf}â–€â–€â–ˆâ–€â–€â–ˆâ–€â–€${reset}
 ${redf}â–€ â–€â–„â–„ â–„â–„â–€ â–€${reset}   ${greenf}â–„â–„â–€â–€ â–€â–€ â–€â–€â–„â–„${reset}   ${yellowf}â–„â–€â–„â–€â–€â–„â–€â–„${reset}   ${bluef}â–€ â–€â–„â–„ â–„â–„â–€ â–€${reset}   ${purplef}â–„â–„â–€â–€ â–€â–€ â–€â–€â–„â–„${reset}   ${cyanf}â–„â–€â–„â–€â–€â–„â–€â–„${reset}

 ${redf_light}  â–€â–„   â–„â–€  ${reset}   ${greenf_light} â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„ ${reset}   ${yellowf_light}  â–„â–ˆâ–ˆâ–„  ${reset}   ${bluef_light}  â–€â–„   â–„â–€  ${reset}   ${purplef_light} â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„ ${reset}   ${cyanf_light}  â–„â–ˆâ–ˆâ–„  ${reset}
 ${redf_light} â–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–€â–ˆâ–„ ${reset}   ${greenf_light}â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ${reset}   ${yellowf_light}â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„${reset}   ${bluef_light} â–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–€â–ˆâ–„ ${reset}   ${purplef_light}â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ${reset}   ${cyanf_light}â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„${reset}
 ${redf_light}â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ${reset}   ${greenf_light}â–€â–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–€${reset}   ${yellowf_light}â–€â–€â–ˆâ–€â–€â–ˆâ–€â–€${reset}   ${bluef_light}â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ${reset}   ${purplef_light}â–€â–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–€${reset}   ${cyanf_light}â–€â–€â–ˆâ–€â–€â–ˆâ–€â–€${reset}
 ${redf_light}â–€ â–€â–„â–„ â–„â–„â–€ â–€${reset}   ${greenf_light}â–„â–„â–€â–€ â–€â–€ â–€â–€â–„â–„${reset}   ${yellowf_light}â–„â–€â–„â–€â–€â–„â–€â–„${reset}   ${bluef_light}â–€ â–€â–„â–„ â–„â–„â–€ â–€${reset}   ${purplef_light}â–„â–„â–€â–€ â–€â–€ â–€â–€â–„â–„${reset}   ${cyanf_light}â–„â–€â–„â–€â–€â–„â–€â–„${reset}


                                        ${whitef}â–Œ${reset}

                                        ${whitef}â–Œ${reset}

                                       ${whitef}â–„â–ˆâ–„${reset}
                                   ${whitef}â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„${reset}
                                   ${whitef}â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€${reset}

