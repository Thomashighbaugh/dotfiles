map r reload
map p print
map i recolor
map - zoom out
map = zoom in
map R rotate
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

# copy to clipboard
set selection-clipboard clipboard

# Stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100


set zoom-step 20
set n-completion-items 20
set incremental-search true


set guioptions ""

# default; padding when statsubar opend (:something)
set statusbar-v-padding 2
set statusbar-h-padding 8
# blank space between pages
set page-padding 2

# default; on abort (<esc>) clear higlight (like :nohl)
set abort-clear-search true

# don't make window title fullpath
set window-title-basename true
# don't show fullpath in status bar
# set statusbar-basename true

# Base16 vice
# Author: Thomas Leon Highbaugh thighbaugh@zoho.com

set default-bg                  "#17191E"
set default-fg                  "#202022"

set statusbar-fg                "#555566"
set statusbar-bg                "#3c3f4c"

set inputbar-bg                 "#17191E"
set inputbar-fg                 "#f4f4f7"

set notification-bg             "#17191E"
set notification-fg             "#f4f4f7"

set notification-error-bg       "#17191E"
set notification-error-fg       "#ff29a8"

set notification-warning-bg     "#17191E"
set notification-warning-fg     "#ff29a8"

set highlight-color             "#f0ffaa"
set highlight-active-color      "#00eaff"

set completion-bg               "#202022"
set completion-fg               "#00eaff"

set completion-highlight-fg     "#f4f4f7"
set completion-highlight-bg     "#00eaff"

set recolor-lightcolor          "#17191E"
set recolor-darkcolor           "#B2BFD9"

set recolor                     "false"
set recolor-keephue             "false"
